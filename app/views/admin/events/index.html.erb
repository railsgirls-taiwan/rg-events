<h1><%= Admin::Event.model_name.human %> <%= link_to t('crud.new'), new_admin_event_path, class: 'btn btn-lg btn-success' %></h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <%= th_for Admin::Event, :id, :title, :date, :place %>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_events.each do |admin_event| %>
      <tr>
        <%= td_for admin_event, :id, :title, :date, :place %>
        <td><%= link_to Attendee.model_name.human, [admin_event, Attendee] %></td>
        <%= td_action_for admin_event %>
      </tr>
    <% end %>
  </tbody>
</table>
