<%= simple_nested_form_for(@admin_event) do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :date %>
    <%= f.input :place %>
    <%= f.input :description, input_html: {class: :redactor} %>
    <%= render 'form_fields', f: f %>
  </div>
  <hr>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
