<h1>「<%= @admin_event.title %>」 - <%= Admin::Attendee.model_name.human %> <%= link_to t('crud.new'), new_admin_event_attendee_path, class: 'btn btn-lg btn-success' %></h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <%= th_for Admin::Attendee, :id, :user, :event %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_attendees.each do |admin_attendee| %>
      <tr>
        <%= td_for admin_attendee, :id, %i[user email], %i[event title] %>
        <td><%= link_to t('crud.show'), admin_event_attendee_path(@admin_event, admin_attendee) %></td>
        <td><%= link_to t('crud.edit'), edit_admin_event_attendee_path(@admin_event, admin_attendee) %></td>
        <td><%= link_to t('crud.destroy'), admin_event_attendee_path(@admin_event, admin_attendee), method: :delete, data: { confirm: t('message.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
