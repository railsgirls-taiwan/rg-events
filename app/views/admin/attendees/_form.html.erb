<%= simple_form_for(@admin_attendee, url: [:admin, @admin_event.becomes(Event), @admin_attendee.becomes(Attendee)], wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f| %>

  <div class="form-inputs">
    <div class="form-group">
      <%= label_tag 'admin_attendee_user', Attendee.human_attribute_name(:user), class: 'col-sm-1 control-label' %>
      <div class="col-sm-9">
        <%= f.input_field :user_id %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag 'admin_attendee_event', Attendee.human_attribute_name(:event), class: 'col-sm-1 control-label' %>
      <div class="col-sm-9">
        <%= f.input_field :event_id, as: :string, class: 'select2-single', data: {model: :Event, column: :title, text: @admin_attendee.event.try(:title).to_s} %>
      </div>
    </div>

    <% @admin_event.fields.each do |field| %>
      <div class="form-group <%= has_error_class @admin_attendee, field %>">
        <%= label_tag 'xxx', "#{'*' if field.required? }#{field.name}", class: 'col-sm-1 control-label' %>
        <div class="col-sm-9">
          <%= build_input @admin_attendee, field %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
